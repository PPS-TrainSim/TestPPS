#!/bin/bash

# Run Scalafmt check
echo "Running Scalafmt check..."
sbt scalafmtCheckAll
if [ $? -ne 0 ]; then
  echo "Scalafmt check failed. Please format your code with 'sbt scalafmtAll'."
  exit 1
fi

# Run WartRemover check
echo "Running WartRemover..."
sbt compile
if [ $? -ne 0 ]; then
  echo "WartRemover found issues. Please fix them before committing."
  exit 1
fi

echo "All checks passed!"
